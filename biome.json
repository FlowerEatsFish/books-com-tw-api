{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "include": ["src/**/*.{js,ts}"],
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "include": ["src/**/*.{js,ts}"],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  }
}
